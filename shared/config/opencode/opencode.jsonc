{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight-transparent",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["bunx", "-y", "@playwright/mcp@latest"],
      "enabled": true,
    },
    "peekaboo": {
      "type": "local",
      "command": ["npx", "-y", "@steipete/peekaboo", "mcp", "serve", "--transport", "stdio"],
      "enabled": true,
      "timeout": 30000,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/readonly",
      "oauth": false,
      "headers": {
        "X-MCP-Tools": "search_pull_requests,pull_request_read,search_issues,issue_read",
        "X-MCP-Readonly": "true",
        "Authorization": "Bearer {env:GITHUB_MCP_TOKEN}",
      },
      "enabled": true,
    },
  },
  "tui": {
    "scroll_speed": 1,
  },
  "plugin": ["@0xsero/open-queue"],
  "permission": {
    "external_directory": {
      "*": "ask",
      "/tmp/**": "allow",
    },
    "bash": {
      "*": "ask",
      "docker-compose *": "allow",
      "bun *": "allow",
      "bunx playwright *": "allow",
      "bun run playwright *": "allow",
      "bunx tsc": "allow",
      "bunx tsc *": "allow",
      "bunx eslint": "allow",
      "bunx eslint *": "allow",
      "bunx vitest": "allow",
      "bunx vitest *": "allow",
      "make": "allow",
      "make *": "allow",
      "cd *": "allow",
      "cat *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "mkdir *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git stash": "allow",
      "git stash *": "allow",
      "sleep *": "allow",
      "echo *": "allow",
      "xcodebuild": "allow",
      "xcodebuild *": "allow",
      "bd *": "allow",
      "port": "allow",
      "port *": "allow",
      "docker ps *": "allow",
      "docker inspect *": "allow",
      "docker compose ps": "allow",
      "docker compose ps *": "allow",
      "docker logs *": "allow",
      "docker compose logs": "allow",
      "docker compose logs *": "allow",
      "docker compose config": "allow",
      "docker compose config *": "allow",
    },
    "read": {
      "*": "allow",
      "*.env": "ask",
      "*.env.*": "ask",
      "*.env.example": "allow",
      "*.env.template": "allow",
    },
    "peekaboo_*": "ask",
  },
  "agent": {
    "oracle": {
      "description": "Come up with a plan for an implementation or code change. Ask questions to a more powerful thinking model.",
      "mode": "subagent",
      "model": "openai/gpt-5.3-codex",
      "reasoningEffort": "high",
      "textVerbosity": "low",
      "reasoningSummary": "auto",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
  },
}
