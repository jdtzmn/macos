{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight-transparent",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["bunx", "-y", "@playwright/mcp@latest"],
      "enabled": true,
    },
  },
  "tui": {
    "scroll_speed": 1,
  },
  "permission": {
    "bash": {
      "*": "ask",
      "docker-compose *": "allow",
      "bun *": "allow",
      "bunx tsc": "allow",
      "bunx tsc *": "allow",
      "make": "allow",
      "make *": "allow",
      "cd *": "allow",
      "cat *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "mkdir *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "sleep *": "allow",
      "echo *": "allow",
      "xcodebuild": "allow",
      "xcodebuild *": "allow",
      "bd *": "allow",
      "port": "allow",
      "port *": "allow",
    },
  },
  "agent": {
    "oracle": {
      "description": "Come up with a plan for an implementation or code change. Ask questions to a more powerful thinking model.",
      "mode": "subagent",
      "model": "opencode/gpt-5.2-codex",
      "reasoningEffort": "high",
      "textVerbosity": "low",
      "reasoningSummary": "auto",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
  },
}
